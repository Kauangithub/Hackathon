generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  name     String
  age      String?
  role     Role      @default(USER)
  Provider Provider?
  senha    String?
}

model Provider {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique @db.ObjectId
  cpfCnpj       String
  enterprise    String
  verified      Boolean  @default(false)
  branch        Branch[]
  writtenEvents Event[]  @relation("WrittenEvents")
}

model Event {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  status    Status   @default(ANALYSYS)
  createdAt DateTime @default(now())
  title     String
  desc      String
  dateStart DateTime
  dateEnd   DateTime
  published Boolean  @default(false)
  author    Provider @relation("WrittenEvents", fields: [authorId], references: [id])
  authorId  String   @db.ObjectId
}

enum Role {
  USER
  PROVIDER
  ADMIN
}

enum Status {
  ANALYSYS
  REVISION
  ACCEPT
}

enum Branch {
  Show
  Culinaria
  Cultura
  Passeio
  Lazer
  Trilhas
  Arte
  Compras
}
