generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  age     String?
  role Role @default(USER)
}

model Prestador {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String
  cpfCnpj Varchar @unique
  enterprise String
  branch String
  writtenEvents Event[]  @relation("WrittenEvents")
}

model Event{
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now())
  title       String
  desc String
  date DateTime
  published   Boolean    @default(false)
  author      User       @relation("WrittenEvents", fields: [authorId], references: [id])
  authorId    String     @db.ObjectId
}

enum Role{
  USER
  PROVIDER
  ADMIN
}